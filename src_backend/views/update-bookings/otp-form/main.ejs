<main class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card shadow">
        <div class="card-header bg-success text-white text-center">
          <h4 class="flex align-items-center justify-content-center mb-0">
            <i class="bi bi-shield-check me-2"></i>
            Xác thực OTP
          </h4>
        </div>
        <div class="card-body">
          <p class="text-muted text-center mb-2">Mã OTP đã được gửi đến email:</p>
          <p class="text-center fw-bold text-primary-color mb-4"><%= email %></p>

          <% if (error) { %>
          <div class="flex align-items-center alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <%= error %>
          </div>
          <% } %>

          <form action="/update-bookings/verify-otp" method="POST">
            <div class="mb-3">
              <label for="otp" class="flex align-items-center form-label">
                <i class="bi bi-key me-2"></i>
                Mã OTP
              </label>
              <input type="text" class="form-control text-center" id="otp" name="otp" placeholder="Nhập mã 6 số"
                maxlength="6" pattern="[0-9]{6}" required />
              <div class="form-text text-center">
                Mã OTP có 6 chữ số và có hiệu lực trong 5 phút
              </div>
            </div>

            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle me-2"></i>
                Xác thực
              </button>
              <a href="/update-bookings/resend-otp" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-clockwise me-2"></i>
                Gửi lại mã OTP
              </a>
              <a href="/update-bookings/email-form" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>
                Thay đổi email
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>

<div id="app-error-message" hidden data-error="<%= error %>"></div>